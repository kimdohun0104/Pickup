<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="파티를 해제하시겠습니까?"
            android:textColor="@color/colorRed"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="파티를 해제하면 다음과 같은 동작이 발생합니다."
            android:textSize="11sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. 신규 파티를 생성한 경우"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생성된 파티를 삭세합니다. (파티 모집글 자체가 사라집니다.)"
                android:textSize="11sp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. 기존 파티에 참여한 경우"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="참여한 파티에서 탈퇴합니다. (파티 모집글은 잔존합니다.)"
                android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGrey_3"
            android:text="취소"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:text="해제하기"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>